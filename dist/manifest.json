{
  "manifest_version": 2,
  "name": "KTH Chronogram",
  "description": "Get an overview of your studies, see what's coming up and plan ahead.",
  "version": "1.2.1",
  "icons": {
    "16": "assets/16.png",
    "48": "assets/48.png",
    "128": "assets/128.png",
    "256": "assets/256.png"
  },
  "browser_action": {
    "default_icon": "assets/16.png",
    "default_title": "Go to KTH Chronogram"
  },
  "permissions": [
    "activeTab",
    "https://www.kth.se/"
  ],
  "content_scripts": [{
    "matches": [
      "https://www.kth.se/social/home/subscriptions/",
      "https://www.kth.se/social/home/subscriptions/?*"
    ],
    "css": ["index.css"],
    "js": ["index.js"]
  }],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "background": {
    "scripts": ["analytics.js"]
  },
  "web_accessible_resources": ["assets/*.png"]
}
