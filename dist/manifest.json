{
  "manifest_version": 2,
  "name": "KTH Social Revamp",
  "description": "Prototype for KTH Social revamp as a browser extension",
  "version": "1.0",
  "icons": {
    "16": "assets/kth-logo-16.png",
    "48": "assets/kth-logo-48.png",
    "128": "assets/kth-logo-128.png"
  },
  "browser_action": {
    "default_icon": "assets/kth-logo-16.png",
    "default_title": "Go to KTH Chronogram"
  },
  "permissions": [
    "activeTab",
    "https://www.kth.se/"
  ],
  "content_scripts": [{
    "matches": [
      "https://www.kth.se/social/home/subscriptions/",
      "https://www.kth.se/social/home/subscriptions/?*"
    ],
    "css": ["index.css"],
    "js": ["index.js"]
  }],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "background": {
    "scripts": ["analytics.js"]
  },
  "web_accessible_resources": ["assets/*.png"]
}
